{
  "Logging": {
    "NLog": {
      "IncludeScopes": false,
      "ParseMessageTemplates": true,
      "CaptureMessageProperties": true
    }
  },
  "NLog": {
    "autoreload": true,
    "internalLogLevel": "Info",
    "internalLogFile": "c:/temp/task8-internal.log",
    "throwConfigExceptions": true,
    "file": {
      "type": "AsyncWrapper",
      "target": {
        "wrappedFile": {
          "type": "File",
          "fileName": "c:/temp/task8.log",
          "layout": {
            "type": "JsonLayout",
            "Attributes": [
              {
                "name": "timestamp",
                "layout": "${date:format=o}"
              },
              {
                "name": "level",
                "layout": "${level}"
              },
              {
                "name": "logger",
                "layout": "${logger}"
              },
              {
                "name": "message",
                "layout": "${message:raw=true}"
              },
              {
                "name": "properties",
                "encode": false,
                "layout": {
                  "type": "JsonLayout",
                  "includeallproperties": "true"
                }
              }
            ]
          }
        }
      }
    }
  },
  "rules": [
    {
      "logger": "*",
      "minLevel": "Trace",
      "writeTo": "File,Console"
    }
  ]
}
